{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "moduleResolution": "node",

        "allowJs": false,
        "removeComments": false,
        "strict": true,
        
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file. */

        "declaration": true, 
        "sourceMap": true,

        "outDir": "./dist"
    },
    "include": [
        "./src"
    ]
}
