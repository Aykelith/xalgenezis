{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",

        "allowJs": false,
        "removeComments": false,
        "strict": true,
        
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file. */

        "declaration": true, 
        "declarationMap": true,
        "sourceMap": true,

        "outDir": "../dist"
    },
    "include": [
        "../src"
    ]
}